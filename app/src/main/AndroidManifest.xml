<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pma.nutrifami">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.ModulesActivity"
            android:label="@string/modules_title" />
        <activity
            android:name=".activities.ModuleActivity"
            android:label="@string/module_title" />
        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/profile_title" />
        <activity android:name=".activities.games.QuizActivity" />
        <activity android:name=".activities.games.PictureQuizActivity" />
        <activity android:name=".activities.games.SwipeActivity" />
        <activity android:name=".activities.games.PairsActivity"></activity>
    </application>

</manifest>