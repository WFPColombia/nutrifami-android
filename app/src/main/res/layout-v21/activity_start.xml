<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.StartActivity">

    <ImageView
        android:id="@+id/video_view_screenshot"
        android:layout_width="match_parent"
        android:src="@mipmap/video_screen"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        />

    <VideoView
        android:id="@+id/start_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/start_darkening_view"
        android:alpha="0.5"
        android:background="@android:color/black" />

    <TextView
        fontPath="fonts/century_gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="DIGITAL NUTRITION TRAINING\nBY THE UNITED NATIONS WORLD FOOD PROGRAMME"
        android:textColor="@android:color/white" />

    <TextView
        fontPath="fonts/century_gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="YOUR\nHEALTHY LIFE\nSTARTS NOW!"
        android:textColor="@android:color/white"
        android:textSize="36sp"/>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:transitionName="@string/qr_transition"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:textSize="18sp"
        android:backgroundTint="@color/colorAccent"
        android:text="SCAN YOUR VOUCHER"
        android:textColor="@android:color/white" />



    <FrameLayout
        android:id="@+id/start_qr_layout"
        android:layout_width="300dp"
        android:visibility="invisible"
        android:layout_height="300dp"
        android:layout_centerInParent="true" />

    <TextView
        fontPath="fonts/century_gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="15%"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:id="@+id/barcode_explanation_text"
        android:layout_alignParentBottom="true"
        android:text="SCAN THE BARCODE OF YOUR VOUCHER"
        />

    <ImageView
        android:id="@+id/wfp_image_view"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/start_nutrifami_logo_description"
        android:src="@mipmap/wfp_white"
        android:visibility="invisible"
        app:layout_marginTopPercent="10%"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME\nTO\nNUTRIFAMI!"
        android:textColor="@android:color/white"
        android:id="@+id/barcode_success_welcome_text"
        android:visibility="invisible"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@id/wfp_image_view"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/start_nutrifami_logo_description"
        android:src="@mipmap/nutrifami_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
</android.support.percent.PercentRelativeLayout>
