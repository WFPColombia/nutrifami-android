<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pma.nutrifami.view.activity.FeedbackActivity">
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/feedback_video"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        />

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:alpha="0.5"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/star"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:id="@+id/feedback_star"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/feedback_star"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_voucher_text"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="GREAT JOB!"
        />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/feedback_voucher_text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/feedback_healthy_text"
        android:layout_height="wrap_content"
        android:hyphenationFrequency="none"
        android:text="You received \n10000 COL$\n that are directly loaded on your Voucher and came one step closer\nto a healthy life."
        />

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/feedback_finish_button"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:textSize="24sp"
        android:text="CONTINUE PLAYING"
        fontPath="fonts/century_bold.ttf"
        android:textColor="@android:color/white"

        android:backgroundTint="@android:color/holo_orange_light"
        />

</RelativeLayout>
