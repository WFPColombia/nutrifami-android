<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               tools:context=".view.activity.StartActivity">

    <VideoView
        android:id="@+id/start_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/start_darkening_view"
        android:alpha="0.5"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/start_nutrifami_logo_description"
        android:src="@mipmap/nutrifami_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        fontPath="fonts/century_gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="-30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/start_subtitle"
        android:textColor="@android:color/white" />

    <TextView
        fontPath="fonts/century_gothic.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/start_big_text"
        android:textColor="@android:color/white"
        android:textSize="36sp"/>

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:textSize="18sp"
        android:text="@string/start_get_started"
        />

</android.support.percent.PercentRelativeLayout>
