<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_dark"
                tools:context=".view.activity.StartActivity">

    <ImageView
        android:id="@+id/video_view_screenshot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/video_screen"
        />

    <!--<View-->
    <!--android:id="@+id/start_darkening_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:alpha="0.5"-->
    <!--android:background="@android:color/black"/>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:backgroundTint="@color/colorAccent"
        android:transitionName="@string/qr_transition"
        app:cardCornerRadius="5dp">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/start_qr_layout"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/barcode_explanation_text"
                fontPath="fonts/century_gothic.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:text="SCAN THE BARCODE OF YOUR VOUCHER"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                app:layout_marginBottomPercent="10%"
                />

            <ImageView
                android:id="@+id/wfp_image_view"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/start_nutrifami_logo_description"
                android:src="@mipmap/wfp_white"
                app:layout_marginTopPercent="5%"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âœ“"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="72sp"
                tools:visibility="visible"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:id="@+id/qr_check_text"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/barcode_success_welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="WELCOME\nANA MARIA"
                android:textColor="@android:color/white"
                android:layout_marginBottom="20dp"
                android:layout_above="@id/qr_check_text"
                android:textSize="28sp"
                android:visibility="invisible"
                tools:visibility="visible"
                />
        </android.support.percent.PercentRelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
